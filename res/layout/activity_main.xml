<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ListView
        android:id="@+id/listDevicesFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@+id/bluetoothstate" >

    </ListView>

    <EditText
        android:id="@+id/textEnterTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bluetoothstate"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:text="Enter Ticket No" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/buttonTrackLuggage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textEnterTicket"
        android:layout_below="@+id/textEnterTicket"
        android:layout_marginTop="20dp"
        android:hint="EK7DFC"
        android:text="Track Luggage" />

    <TextView
        android:id="@+id/bluetoothstate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listDevicesFound"
        android:layout_below="@+id/textStatus"
        android:text="TextView" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonTrackLuggage"
        android:layout_below="@+id/buttonTrackLuggage"
        android:text="In Transit" />

</RelativeLayout>